    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Exo 2', sans-serif;
            background-color: #f0f0f0; /* Lighter base color */
            touch-action: manipulation;
            overflow: hidden;
            position: relative;
        }

        /* Morphing blobs pseudo-element */
        body::before {
            content: '';
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            z-index: -2;
            background: 
                radial-gradient(ellipse at 15% 70%, #666 0%, rgba(240,240,240,0) 60%),
                radial-gradient(ellipse at 85% 25%, #777 0%, rgba(240,240,240,0) 55%),
                radial-gradient(ellipse at 30% 10%, #888 0%, rgba(240,240,240,0) 65%),
                radial-gradient(ellipse at 70% 90%, #666 0%, rgba(240,240,240,0) 60%),
                radial-gradient(ellipse at 50% 50%, #777 0%, rgba(240,240,240,0) 60%);
            background-color: #f0f0f0; /* Ensure base matches */
            background-size: 300% 300%;
            animation: morphingBackground 10s ease-in-out infinite alternate;
        }

        /* Grain overlay pseudo-element */
        body::after {
            content: '';
            position: fixed;
            top: -50%; left: -50%;
            width: 200%; height: 200%;
            z-index: -1;
            pointer-events: none;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 600 600' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
            background-repeat: repeat;
            opacity: 0.06;
            animation: grainAnimation 1s steps(4) infinite;
        }

        @keyframes morphingBackground {
            0% { background-position: 0% 0%; }
            100% { background-position: 100% 100%; }
        }
        
        @keyframes grainAnimation {
            0%, 100% { transform: translate(0, 0); }
            25% { transform: translate(-2%, -1%); }
            50% { transform: translate(2%, 1%); }
            75% { transform: translate(-1%, 2%); }
        }

        .board-container {
            width: 90vw;
            height: 90vw;
            max-width: 500px;
            max-height: 500px;
        }
        .chess-board {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            grid-template-rows: repeat(5, 1fr);
            gap: 4px;
        }

        .square {
            display: flex;
            justify-content: center;
            align-items: center;
            transition: all 0.2s ease-in-out;
            position: relative;
            border-radius: 6px;
            box-shadow: inset 0 1px 1px rgba(255, 255, 255, 0.3), inset 0 -1px 1px rgba(0, 0, 0, 0.1);
        }
        
        .square.light {
            background: linear-gradient(180deg, #e0e0e0, #c6c6c6);
        }
        .square.dark {
            background: linear-gradient(180deg, #9a9a9a, #7a7a7a);
        }
        
        .piece-svg {
            width: 70%;
            height: 70%;
            cursor: pointer;
            transition: transform 0.1s ease-in-out;
            filter: drop-shadow(2px 2px 2px rgba(0,0,0,0.3));
            position: relative;
            z-index: 10;
        }
        
        .pawn-svg {
            width: 52.5%; /* 25% smaller than 70% */
            height: 52.5%;
        }

        .square.selected::after, .square.valid-move::after, .square.capture-move::after, .square.swap-move::after {
            content: '';
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            border-radius: 6px;
            border: 4px solid #FF2A80;
            box-shadow: 0 0 12px #FF2A80;
            z-index: 5;
        }

        .square.selected::after {
            background-color: rgba(255, 42, 128, 0.75);
        }
        
        .square.valid-move::after, .square.capture-move::after, .square.swap-move::after {
            background-color: rgba(255, 42, 128, 0.30);
        }
        
        .selected .piece-svg {
            transform: scale(1.1);
        }
        
        .modal-backdrop {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 100;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }
        .modal-backdrop.visible {
            opacity: 1;
            visibility: visible;
        }
        .modal-content {
            background-color: white;
            padding: 2rem;
            border-radius: 0.75rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            text-align: center;
