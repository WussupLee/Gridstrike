<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GRIDSTRIKE</title>
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:wght@200;900&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Exo 2', sans-serif;
            background-color: #e0e0e0; /* Fallback background color */
            touch-action: manipulation;
            overflow: hidden; /* Hide scrollbars caused by large pseudo-element */
            position: relative;
        }

        /* Geometric swirling background */
        body::before {
            content: '';
            position: fixed;
            top: 50%;
            left: 50%;
            width: 150vmax;
            height: 150vmax;
            background: conic-gradient(from 0.25turn at 50% 50%, #e0e0e0, #f0f0f0, #d0d0d0, #f5f5f5, #e0e0e0);
            animation: swirl 40s linear infinite;
            z-index: -1;
            opacity: 0.7;
            transform-origin: center center;
        }

        @keyframes swirl {
            from { transform: translate(-50%, -50%) rotate(0deg); }
            to { transform: translate(-50%, -50%) rotate(360deg); }
        }

        .board-container {
            width: 90vw;
            height: 90vw;
            max-width: 500px; /* Adjusted max size for 5x5 */
            max-height: 500px;
        }
        .chess-board {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            grid-template-rows: repeat(5, 1fr);
            border-radius: 8px;
            overflow: hidden;
            border: 2px solid #555; /* Adding a subtle border for definition */
        }

        .square {
            display: flex;
            justify-content: center;
            align-items: center;
            transition: background-color 0.2s ease-in-out;
            position: relative;
        }
        
        .square.light {
            background-color: #d3d3d3;
        }
        .square.dark {
            background-color: #888888;
        }
        
        .piece-svg {
            width: 75%;
            height: 75%;
            cursor: pointer;
            transition: transform 0.1s ease-in-out;
            filter: drop-shadow(2px 2px 2px rgba(0,0,0,0.3));
        }
        .selected {
            background-color: rgba(75, 85, 99, 0.4) !important;
        }
        .selected .piece-svg {
            transform: scale(1.1);
        }
        .valid-move::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 35%;
            height: 35%;
            background-color: rgba(0, 0, 0, 0.4);
            border-radius: 50%;
        }
        .capture-move::after, .swap-move::after {
            content: '';
            position: absolute;
            top: 10%;
            left: 10%;
            width: 80%;
            height: 80%;
            border: 4px solid rgba(45, 55, 72, 0.7);
            border-radius: 50%;
            box-sizing: border-box;
        }
        .swap-move::after {
            border-style: dashed;
        }
        
        /* Modal Styles */
        .modal-backdrop {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 100;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }
        .modal-backdrop.visible {
            opacity: 1;
            visibility: visible;
        }
        .modal-content {
            background-color: white;
            padding: 2rem;
            border-radius: 0.75rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            text-align: center;
            transform: scale(0.95);
            transition: transform 0.3s ease;
        }
        .modal-backdrop.visible .modal-content {
            transform: scale(1);
        }
    </style>
</head>
<body class="flex flex-col items-center justify-center min-h-screen p-4">

    <div class="w-full max-w-md mx-auto">
        <h1 class="text-3xl md:text-4xl font-black text-center text-white mb-4" style="text-shadow: 1px 1px 3px rgba(0,0,0,0.5);">GRIDSTRIKE</h1>
        
        <div id="status-panel" class="bg-white p-3 rounded-lg shadow-md mb-4 text-center">
            <p id="turn-info" class="text-lg font-extralight text-gray-700">Your Turn</p>
            <p id="ability-info" class="text-sm font-extralight text-gray-500 h-5"></p>
        </div>
    </div>

    <div class="board-container">
        <div id="chess-board" class="chess-board aspect-square w-full h-full"></div>
    </div>
    
    <div class="mt-4">
        <button id="reset-button" class="px-6 py-3 bg-gray-700 text-white font-semibold rounded-lg shadow-md hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-600 focus:ring-opacity-75 transition-transform transform hover:scale-105">
            New Game
        </button>
    </div>

    <div id="game-over-modal" class="modal-backdrop">
        <div class="modal-content">
            <h2 id="winner-message" class="text-2xl font-bold text-gray-800 mb-4"></h2>
            <p class="text-gray-600 mb-6">Play again?</p>
            <button id="play-again-button" class="px-6 py-3 bg-gray-600 text-white font-semibold rounded-lg shadow-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-75 transition-transform transform hover:scale-105">
                Play Again
            </button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const boardElement = document.getElementById('chess-board');
            const turnInfo = document.getElementById('turn-info');
            const abilityInfo = document.getElementById('ability-info');
            const resetButton = document.getElementById('reset-button');
            const gameOverModal = document.getElementById('game-over-modal');
            const winnerMessage = document.getElementById('winner-message');
            const playAgainButton = document.getElementById('play-again-button');

            const BOARD_SIZE = 5;
            let board = [];
            let currentPlayer = 'white';
            let selectedPiece = null;
            let validMoves = [];
            let isGameOver = false;
            let isPlayerTurn = true;
            let commanderSwapUsed = { white: false, black: false };
            
            const PIECE_COLORS = { 
                white: '#f0f0f0',
                black: '#5a5a5a'
            };
            const STROKE_COLOR = '#333333';

            const PIECES_SVG = {
                commander: (color) => `<svg class="piece-svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="45" fill="${color}" stroke="${STROKE_COLOR}" stroke-width="4"/><circle cx="50" cy="50" r="30" fill="none" stroke="${STROKE_COLOR}" stroke-width="4"/><circle cx="50" cy="50" r="15" fill="none" stroke="${STROKE_COLOR}" stroke-width="4"/></svg>`,
                guardian: (color) => `<svg class="piece-svg" viewBox="0 0 100 100"><rect x="10" y="10" width="80" height="80" rx="8" fill="${color}" stroke="${STROKE_COLOR}" stroke-width="4"/></svg>`,
                assassin: (color) => `<svg class="piece-svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="40" fill="${color}" stroke="${STROKE_COLOR}" stroke-width="4"/></svg>`,
                pawn: (color) => `<svg class="piece-svg" viewBox="0 0 100 100"><path d="M10 10 H 90 V 90 H 10 Z M 10 10 L 90 90 M 10 90 L 90 10" fill="${color}" stroke="${STROKE_COLOR}" stroke-width="4"/></svg>`,
            };

            function initializeGame() {
                board = createInitialBoard();
                currentPlayer = 'white';
                selectedPiece = null;
                validMoves = [];
                isGameOver = false;
                isPlayerTurn = true;
                commanderSwapUsed = { white: false, black: false };
                renderBoard();
                updateStatus();
                gameOverModal.classList.remove('visible');
            }
            
            function createInitialBoard() {
                const newBoard = Array.from({ length: BOARD_SIZE }, () => Array(BOARD_SIZE).fill(null));
                const p = PIECES_SVG;
                newBoard[4][2] = { piece: 'commander', color: 'white', svg: p.commander(PIECE_COLORS.white) };
                newBoard[4][3] = { piece: 'guardian', color: 'white', svg: p.guardian(PIECE_COLORS.white) };
                newBoard[4][1] = { piece: 'assassin', color: 'white', svg: p.assassin(PIECE_COLORS.white) };
                newBoard[3][1] = { piece: 'pawn', color: 'white', svg: p.pawn(PIECE_COLORS.white) };
                newBoard[3][2] = { piece: 'pawn', color: 'white', svg: p.pawn(PIECE_COLORS.white) };
                newBoard[3][3] = { piece: 'pawn', color: 'white', svg: p.pawn(PIECE_COLORS.white) };

                newBoard[0][2] = { piece: 'commander', color: 'black', svg: p.commander(PIECE_COLORS.black) };
                newBoard[0][1] = { piece: 'guardian', color: 'black', svg: p.guardian(PIECE_COLORS.black) };
                newBoard[0][3] = { piece: 'assassin', color: 'black', svg: p.assassin(PIECE_COLORS.black) };
                newBoard[1][1] = { piece: 'pawn', color: 'black', svg: p.pawn(PIECE_COLORS.black) };
                newBoard[1][2] = { piece: 'pawn', color: 'black', svg: p.pawn(PIECE_COLORS.black) };
                newBoard[1][3] = { piece: 'pawn', color: 'black', svg: p.pawn(PIECE_COLORS.black) };

                return newBoard;
            }

            function renderBoard() {
                boardElement.innerHTML = '';
                for (let r = 0; r < BOARD_SIZE; r++) {
                    for (let c = 0; c < BOARD_SIZE; c++) {
                        const square = document.createElement('div');
                        square.classList.add('square');
                        const isLight = (r + c) % 2 === 0;
                        square.classList.add(isLight ? 'light' : 'dark');
                        square.dataset.row = r;
                        square.dataset.col = c;

                        const piece = board[r][c];
                        if (piece) {
                            square.innerHTML = piece.svg;
                        }
                        boardElement.appendChild(square);
                    }
                }
                addEventListeners();
            }
            
            function addEventListeners() {
                document.querySelectorAll('.square').forEach(square => square.addEventListener('click', onSquareClick));
            }

            function onSquareClick(event) {
                if (isGameOver || !isPlayerTurn) return;
                
                const square = event.currentTarget;
                const row = parseInt(square.dataset.row);
                const col = parseInt(square.dataset.col);
                const piece = board[row][col];
                
                if (selectedPiece) {
                    if (row === selectedPiece.r && col === selectedPiece.c) {
                        deselectPiece();
                        return;
                    }

                    const move = validMoves.find(m => m.r === row && m.c === col);
                    if (move) {
                        movePiece(selectedPiece.r, selectedPiece.c, row, col, move.isSwap);
                        deselectPiece();
                        switchPlayer();
                    } else if (piece && piece.color === currentPlayer) {
                        selectPiece(row, col);
                    } else {
                        deselectPiece();
                    }
                } else if (piece && piece.color === currentPlayer) {
                    selectPiece(row, col);
                }
            }
            
            function isCommanderProtected(r, c, color) {
                for (let dr = -1; dr <= 1; dr++) {
                    for (let dc = -1; dc <= 1; dc++) {
                        if (dr === 0 && dc === 0) continue;
                        const adjR = r + dr;
                        const adjC = c + dc;
                        if (isWithinBoard(adjR, adjC)) {
                            const adjacentPiece = board[adjR][adjC];
                            if (adjacentPiece && adjacentPiece.piece === 'guardian' && adjacentPiece.color === color) {
                                return true;
                            }
                        }
                    }
                }
                return false;
            }

            function selectPiece(r, c) {
                deselectPiece();
                selectedPiece = { r, c };
                validMoves = getValidMoves(board[r][c], r, c);
                highlightSquares();
            }

            function deselectPiece() {
                selectedPiece = null;
                validMoves = [];
                highlightSquares();
            }

            function movePiece(fromR, fromC, toR, toC, isSwap = false) {
                if (isSwap) {
                    const piece1 = board[fromR][fromC];
                    const piece2 = board[toR][toC];
                    board[toR][toC] = piece1;
                    board[fromR][fromC] = piece2;
                    commanderSwapUsed[currentPlayer] = true;
                } else {
                    const piece = board[fromR][fromC];
                    const capturedPiece = board[toR][toC];
                    if (capturedPiece && capturedPiece.piece === 'commander') {
                        isGameOver = true;
                    }
                    board[toR][toC] = piece;
                    board[fromR][fromC] = null;
                }
                renderBoard();
            }

            function switchPlayer() {
                if (isGameOver) {
                    showGameOverModal();
                    return;
                }
                currentPlayer = currentPlayer === 'white' ? 'black' : 'white';
                updateStatus();

                if (currentPlayer === 'black') {
                    isPlayerTurn = false;
                    setTimeout(makeComputerMove, 1000); // AI "thinks" for a second
                } else {
                    isPlayerTurn = true;
                }
            }
            
            function highlightSquares() {
                document.querySelectorAll('.square').forEach(s => s.classList.remove('selected', 'valid-move', 'capture-move', 'swap-move'));
                if (selectedPiece) {
                    document.querySelector(`[data-row='${selectedPiece.r}'][data-col='${selectedPiece.c}']`)?.classList.add('selected');
                }
                validMoves.forEach(move => {
                    const moveSquare = document.querySelector(`[data-row='${move.r}'][data-col='${move.c}']`);
                    if (moveSquare) {
                        if(move.isSwap) moveSquare.classList.add('swap-move');
                        else if (board[move.r][move.c]) moveSquare.classList.add('capture-move');
                        else moveSquare.classList.add('valid-move');
                    }
                });
            }
            
            function updateStatus() {
                if (currentPlayer === 'white') {
                    turnInfo.textContent = "Your Turn";
                    if (!commanderSwapUsed.white) {
                        abilityInfo.textContent = 'Commander Swap Available';
                    } else {
                        abilityInfo.textContent = '';
                    }
                } else {
                    turnInfo.textContent = "Computer is thinking...";
                    abilityInfo.textContent = '';
                }
            }

            function showGameOverModal() {
                const winner = currentPlayer === 'white' ? 'You' : 'The Computer';
                winnerMessage.textContent = `${winner} won!`;
                gameOverModal.classList.add('visible');
            }

            function makeComputerMove() {
                const pieceValues = { commander: 100, guardian: 3, assassin: 3, pawn: 1 };
                let bestMoves = [];
                let maxScore = -Infinity;

                for (let r = 0; r < BOARD_SIZE; r++) {
                    for (let c = 0; c < BOARD_SIZE; c++) {
                        const piece = board[r][c];
                        if (piece && piece.color === 'black') {
                            const moves = getValidMoves(piece, r, c);
                            for (const move of moves) {
                                let score = 0;
                                const targetPiece = board[move.r][move.c];
                                if (targetPiece) {
                                    score = pieceValues[targetPiece.piece] || 0;
                                }
                                if (move.isSwap) {
                                    score = 0.5; // Small incentive to swap if no better move
                                }

                                if (score > maxScore) {
                                    maxScore = score;
                                    bestMoves = [{ from: { r, c }, to: move }];
                                } else if (score === maxScore) {
                                    bestMoves.push({ from: { r, c }, to: move });
                                }
                            }
                        }
                    }
                }

                if (bestMoves.length > 0) {
                    const chosenMove = bestMoves[Math.floor(Math.random() * bestMoves.length)];
                    movePiece(chosenMove.from.r, chosenMove.from.c, chosenMove.to.r, chosenMove.to.c, chosenMove.to.isSwap);
                }
                
                switchPlayer();
            }
            
            function getValidMoves(piece, r, c) {
                // ... [This function remains unchanged from previous version]
                if (!piece) return [];
                switch(piece.piece) {
                    case 'pawn': return getPawnMoves(r, c, piece.color);
                    case 'guardian': return getGuardianMoves(r, c, piece.color);
                    case 'assassin': return getAssassinMoves(r, c, piece.color);
                    case 'commander': return getCommanderMoves(r, c, piece.color);
                    default: return [];
                }
            }
            
            function isWithinBoard(r, c) {
                return r >= 0 && r < BOARD_SIZE && c >= 0 && c < BOARD_SIZE;
            }

            function getPawnMoves(r, c, color) {
                // ... [This function remains unchanged from previous version]
                const moves = [];
                const direction = color === 'white' ? -1 : 1;
                const oneStep = r + direction;
                if (isWithinBoard(oneStep, c) && !board[oneStep][c]) moves.push({ r: oneStep, c: c });
                [{r: oneStep, c: c - 1}, {r: oneStep, c: c + 1}].forEach(move => {
                    if(isWithinBoard(move.r, move.c) && board[move.r][move.c] && board[move.r][move.c].color !== color) {
                        moves.push(move);
                    }
                });
                return moves;
            }

            function getGuardianMoves(r, c, color) {
                // ... [This function remains unchanged from previous version]
                const moves = [];
                const directions = [[-1, 0], [1, 0], [0, -1], [0, 1]];
                for (const [dr, dc] of directions) {
                    for (let i = 1; i <= 2; i++) {
                        let nextR = r + i * dr;
                        let nextC = c + i * dc;
                        if (!isWithinBoard(nextR, nextC)) break;
                        if (board[nextR][nextC]) {
                            if (board[nextR][nextC].color !== color) moves.push({ r: nextR, c: nextC });
                            break;
                        }
                        moves.push({ r: nextR, c: nextC });
                    }
                }
                return moves;
            }

            function getAssassinMoves(r, c, color) {
                // ... [This function remains unchanged from previous version]
                const moves = [];
                const directions = [[-1, -1], [-1, 1], [1, -1], [1, 1]];
                for (const [dr, dc] of directions) {
                    const oneStepR = r + dr, oneStepC = c + dc;
                    const twoStepR = r + 2 * dr, twoStepC = c + 2 * dc;

                    if(isWithinBoard(oneStepR, oneStepC)) {
                        const oneStepPiece = board[oneStepR][oneStepC];
                        if(!oneStepPiece || oneStepPiece.color !== color) moves.push({r: oneStepR, c: oneStepC});

                        if (!oneStepPiece || oneStepPiece.color === color) {
                            if (isWithinBoard(twoStepR, twoStepC)) {
                               const twoStepPiece = board[twoStepR][twoStepC];
                               if(!twoStepPiece || twoStepPiece.color !== color) moves.push({r: twoStepR, c: twoStepC});
                           }
                        }
                    }
                }
                return moves;
            }
            
            function getCommanderMoves(r, c, color) {
                // ... [This function remains unchanged from previous version]
                const moves = [];
                for (let dr = -1; dr <= 1; dr++) {
                    for (let dc = -1; dc <= 1; dc++) {
                        if (dr === 0 && dc === 0) continue;
                        const nextR = r + dr, nextC = c + dc;
                        if (isWithinBoard(nextR, nextC)) {
                            const targetPiece = board[nextR][nextC];
                            if (!targetPiece || targetPiece.color !== color) {
                                moves.push({ r: nextR, c: nextC });
                            }
                            if (!commanderSwapUsed[color] && targetPiece && targetPiece.color === color) {
                                moves.push({ r: nextR, c: nextC, isSwap: true });
                            }
                        }
                    }
                }
                return moves;
            }

            resetButton.addEventListener('click', initializeGame);
            playAgainButton.addEventListener('click', initializeGame);

            initializeGame();
        });
    </script>
</body>
</html>

